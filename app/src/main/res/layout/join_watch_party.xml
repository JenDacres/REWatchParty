<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/streaming_services_1">

    <!-- Foreground Content (in a centered vertical layout) -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout4"
        android:layout_width="960dp"
        android:layout_height="540dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="549dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="#A6000000"
            android:backgroundTint="#5AFFFEFE"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:scrollbarSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="Join Watch Party"
                android:textAlignment="center"
                android:textColor="#F8F5F5"
                android:textSize="34sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/WPIDEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:background="@drawable/rounded_edit_text"
                android:hint="Enter Watch Party ID...."
                android:padding="12dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/WPPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rounded_edit_text"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/joinRoomButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginVertical="50dp"
                android:background="@drawable/rounded_button"
                android:text="JOIN WATCH PARTY"
                android:textColor="@color/join_background"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@android:color/holo_blue_light"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/menu" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Footer (menu bar with image) -->

</androidx.constraintlayout.widget.ConstraintLayout>
