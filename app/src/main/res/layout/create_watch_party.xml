<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/streaming_services_1">

    <!-- Foreground Content -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="541dp"
            android:layout_height="479dp"
            android:layout_gravity="center_horizontal"
            android:background="#A6000000"
            android:backgroundTint="#5AFFFEFE"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="20dp"
            android:layout_marginTop="20dp"
            android:scrollbarSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="60dp">

            <TextView
                android:id="@+id/createWPText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Create Watch Party"
                android:textAlignment="center"
                android:textColor="#F8F5F5"
                android:textSize="34sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/WPIDEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/rounded_edit_text"
                android:drawableEnd="@drawable/ic_clear"
                android:hint="Set Watch Party ID...."
                android:padding="12dp" />

            <EditText
                android:id="@+id/WPPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rounded_edit_text"
                android:hint="Set Password"
                android:inputType="textPassword"
                android:padding="12dp" />

            <SeekBar
                android:id="@+id/userSeekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginVertical="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/design_default_color_background"
                android:backgroundTint="#9DFFFEFE"
                android:max="50"
                android:progress="2"
                android:progressTint="@color/design_default_color_primary_dark"
                android:scrollbarThumbHorizontal="@color/design_default_color_primary"
                android:secondaryProgressTint="@color/design_default_color_primary_dark" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_dynamic_neutral20"
                android:backgroundTint="#62AAAAAA"
                android:text="Set Maximum Watch Party Occupants"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_background"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CreateWPButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginVertical="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button"
                android:text="CREATE WATCH PARTY"
                android:textColor="@color/join_background"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@android:color/holo_blue_light"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/menu" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Footer (menu bar with image) -->

</androidx.constraintlayout.widget.ConstraintLayout>
