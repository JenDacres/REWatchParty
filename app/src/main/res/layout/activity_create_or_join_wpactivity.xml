    <ImageButton
        android:id="@+id/joinParty"
        android:layout_width="219dp"
        android:layout_height="190dp"
        android:layout_marginTop="120dp"
        android:background="@android:color/background_light"
        app:circularflow_defaultRadius="@dimen/cardview_default_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:srcCompat="@drawable/capture"
        android:contentDescription="Join Watch Party Button with a add user icon"/>

    <ImageButton
        android:id="@+id/createParty"
        android:layout_width="219dp"
        android:layout_height="190dp"
        android:layout_marginTop="120dp"
        android:background="@android:color/background_light"
